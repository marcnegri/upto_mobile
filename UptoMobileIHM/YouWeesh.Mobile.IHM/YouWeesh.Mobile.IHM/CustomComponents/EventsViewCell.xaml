<?xml version="1.0" encoding="utf-8" ?>
<ViewCell x:Class="YouWeesh.Mobile.CustomComponents.EventsViewCell"
          xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		  xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
			<RelativeLayout x:Name="mainLayout" HeightRequest="250">
				<Image Source="{Binding Picture}" 
				RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"

				HeightRequest="250"
				Aspect="AspectFill"
				Margin="5,5,5,5">
		</Image>
				<StackLayout Margin="10,10,10,10" 
				RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" 
				Orientation="Horizontal">
				<controls:CircleImage Aspect="AspectFit" Source="portrait.jpg" HeightRequest="50" WidthRequest="50"/>
				<Label 
                       FontAttributes="Bold"
                       FontSize="24"
                       Text="{Binding Title}"
                       TextColor="White"
                       XAlign="Center"
                       YAlign="Center" />
				</StackLayout>
				<StackLayout Margin="10,10,10,10" Opacity="0.80" 
				BackgroundColor="White" 
				RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" 
				RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.75}"
				Orientation="Horizontal">
					<Label 
                       Text="{Binding Description}"
                       TextColor="Black" Margin="2,2,2,2"/>
				</StackLayout>
        </RelativeLayout>
        <!--StackLayout BackgroundColor="Black" HeightRequest="2">
            <Label Text=" " />
        </StackLayout -->
</ViewCell>