<ViewCell x:Class="YouWeesh.Mobile.CustomComponents.MenuCell"
          xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" HeightRequest="50" Margin="10,0,0,0">
		<Image Source="{Binding IconSource}" Aspect="AspectFit" HeightRequest="30" WidthRequest="30" Margin="0,0,10,0"></Image>
		<Label Text="{Binding Title}" FontSize="16" VerticalTextAlignment="Center" x:Name="lblMenuTitle"></Label>
	</StackLayout>
</ViewCell>

