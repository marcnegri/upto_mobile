<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YouWeesh.Mobile.PageTest">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center"/>
  <Label Text="Welcome to YouWeesh" VerticalOptions="Center" HorizontalOptions="Center"/>
  <StackLayout>
    <Entry Text="Login" TextColor="Blue" BackgroundColor="Gray" Focused="Entry_Focused" HorizontalOptions="Center" WidthRequest="100"></Entry>
    <Entry Text="Password" TextColor="Blue" IsPassword="true"  Placeholder="Password" BackgroundColor="Gray" HorizontalOptions="Center"></Entry>
    <Button Text="Login"
        HorizontalOptions="Center" />
    <Button Text="Sign in"
        HorizontalOptions="Center" />
    <Button Text="Login With Facebook"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand" />
    <Button Text="Login With Twitter"
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand" Clicked="BtnTwitter_Clicked" />
  </StackLayout>
</ContentPage>