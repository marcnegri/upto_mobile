<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="YouWeesh.Mobile.Views.EventDetailsView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
			 xmlns:Customcontrols="clr-namespace:YouWeesh.Mobile.CustomComponents;assembly=YouWeesh.Mobile">
			<StackLayout x:Name="stkHeader">
				<StackLayout HeightRequest="210">
					<RelativeLayout x:Name="rltHeader" HeightRequest="210">
						<Image  x:Name="imgBackground"
								Source="trail.jpg" 
								RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
								HeightRequest="210"
								Aspect="AspectFill"
								Opacity="0.8">
						</Image>
				<StackLayout Orientation="Horizontal" x:Name="stkImgProfile"  HorizontalOptions="Center">
						<controls:CircleImage
							x:Name="imgProfile"
							Aspect="AspectFit" 
							Source="portrait4.png"
							BorderColor="White"
							BorderThickness="2"
							HeightRequest="75"/>
					</StackLayout>
						<Customcontrols:RobotoLabel 
						    x:Name="lblProfileName"
		                    FontAttributes="Bold"
		                    FontSize="24"
		                    Text="Trail des Roussets"
		                    TextColor="White"
						    XAlign="Center"/>
						<StackLayout Orientation="Horizontal" x:Name="stkLocation" HorizontalOptions="Center" HeightRequest="20">
							<Image  x:Name="imgLocation"
									Source="location512.png"
									HeightRequest="20"
									Aspect="AspectFill"/>
							<Customcontrols:RobotoLabel 
			                    FontAttributes="Bold"
							    x:Name="lblLocation"
			                    FontSize="15"
			                    Text="Geneva, SZ"
							    XAlign="Center"
								HeightRequest="20"/>
						</StackLayout>
						<StackLayout Orientation="Horizontal" x:Name="stkParticipants" HorizontalOptions="StartAndExpand" HeightRequest="30">
							<Image  x:Name="imgParticipant"
									Source="participants.png"
									HeightRequest="30"
									Aspect="AspectFill"/>
							<Customcontrols:RobotoLabel 
									x:Name="lblNbrParticipants"
									Text="2/120"
									TextColor="White"
									FontSize="18"/>
						</StackLayout>
					</RelativeLayout>
				</StackLayout>
				<StackLayout x:Name="stkContent">
					<Customcontrols:RobotoLabel 
						x:Name="lblDescription" 
						Text="Samedi une marche découverte et dimanche les courses avec 3 distances : 12 km, 20 km et 32 km"
						TextColor="Black" />
					<Customcontrols:RobotoLabel 
						x:Name="lblPrice" 
						Text="GRATUIT"
						TextColor="Black"
						/>
				</StackLayout>
				<StackLayout x:Name="stkChatbox">
				</StackLayout>
				<Customcontrols:MessageBoxView></Customcontrols:MessageBoxView>
			</StackLayout>
</ContentPage>