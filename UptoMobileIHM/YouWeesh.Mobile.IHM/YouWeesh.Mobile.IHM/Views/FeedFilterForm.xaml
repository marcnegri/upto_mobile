<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="YouWeesh.Mobile.Views.FeedFilterForm">
  <RelativeLayout BackgroundColor="Gray" HeightRequest="250">
    <TableView Intent="Settings">
      <TableRoot>
        <TableSection Title="Filters">
          <SwitchCell Text="Weesh" />
          <SwitchCell Text="Events"/>
          <SwitchCell Text="Friends"/>
          <ViewCell>
              <StackLayout Orientation="Horizontal">
                    <Label HorizontalOptions="Start" VerticalOptions="Center" Text="Distance" />
                    <Slider Maximum="300" Minimum="1" HorizontalOptions="StartAndExpand" WidthRequest="200"></Slider>
              </StackLayout>            
          </ViewCell>
        </TableSection>
      </TableRoot>
    </TableView> 
 </RelativeLayout>
</ContentView>