<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="YouWeesh.Mobile.Views.FeedView"
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:controls="clr-namespace:YouWeesh.Mobile.CustomComponents;assembly=YouWeesh.Mobile"
            xmlns:local="clr-namespace:YouWeesh.Mobile.Views;assembly=YouWeesh.Mobile"
            xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    	<StackLayout x:Name="stackLayout"
                     BackgroundColor="#EEEEEE"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical">
    		<ScrollView x:Name="scrlMainView"
                         Margin="0,10,0,0"  VerticalOptions="LayoutOptions.FillAndExpand">
                <RelativeLayout x:Name="relativeLayout">
                	<ContentPage.Resources>
    				<ResourceDictionary>
      					<controls:FeedViewTemplateSelector x:Key="ElementTemplateSelector"></controls:FeedViewTemplateSelector>
    				</ResourceDictionary>
  					</ContentPage.Resources>
                    <ListView x:Name="feedView"
                              HasUnevenRows="True"
							  ItemTemplate="{StaticResource ElementTemplateSelector}" >
                    </ListView>
                </RelativeLayout>
            </ScrollView>
        </StackLayout>
</ContentPage>