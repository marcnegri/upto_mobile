<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:local="clr-namespace:YouWeesh.Mobile.Views;assembly=YouWeesh.Mobile"
             xmlns:controls="clr-namespace:YouWeesh.Mobile.CustomComponents;assembly=YouWeesh.Mobile"
             x:Class="YouWeesh.Mobile.Views.FeedView">
  <ContentPage Title="List" x:Name="contentPage">
    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" BackgroundColor="White" x:Name="stackLayout">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <SearchBar Placeholder="Search terms..." TextChanged="SearchBar_OnTextChanged" Grid.Row="0" Grid.Column="0" BackgroundColor="White"></SearchBar>
        <Button Image="filter.png" Grid.Row="0" Grid.Column="1" Clicked="BtnFilter_Clicked" BackgroundColor="White"></Button>
      </Grid>     
       <ScrollView Scrolled="scrlMainView_Scrolled" x:Name="scrlMainView">       
          <RelativeLayout x:Name="relativeLayout">
          <ListView x:Name="feedView" ItemAppearing="feedView_OnItemAppaering" HasUnevenRows="True">
            <ListView.ItemTemplate>
              <DataTemplate>
                <controls:WeeshViewCell Tapped="ImageCell_OnTapped" Height="100"/>              
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
         </RelativeLayout>
       </ScrollView>
    </StackLayout>
   </ContentPage>
  <NavigationPage Title="Map">
    <x:Arguments>
      <ContentPage>
        <StackLayout VerticalOptions="StartAndExpand" Padding="30">
          <maps:Map HeightRequest = "600"
                WidthRequest = "250"
              x:Name="MyMap"
              IsShowingUser="true"/>
        </StackLayout>
      </ContentPage>
    </x:Arguments>
  </NavigationPage>
</TabbedPage>