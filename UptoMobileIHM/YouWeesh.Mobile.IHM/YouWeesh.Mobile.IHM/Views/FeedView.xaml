<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage x:Class="YouWeesh.Mobile.Views.FeedView"
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:YouWeesh.Mobile.Views;assembly=YouWeesh.Mobile"
            xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    <ContentPage x:Name="contentPage" Title="List">
        <StackLayout x:Name="stackLayout"
                     BackgroundColor="White"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <SearchBar Grid.Row="0"
                           Grid.Column="0"
                           BackgroundColor="White"
                           Placeholder="Search terms..."
                           TextChanged="SearchBar_OnTextChanged" />
                <Button Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="White"
                        Clicked="BtnFilter_Clicked"
                        Image="filter.png" />
            </Grid>
            <ScrollView x:Name="scrlMainView" Scrolled="scrlMainView_Scrolled">
                <RelativeLayout x:Name="relativeLayout">
                    <ListView x:Name="feedView"
                              HeightRequest="901"
                              ItemAppearing="feedView_OnItemAppaering">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell Detail="{Binding Creator}"
                                           ImageSource="{Binding Image}"
                                           Tapped="ImageCell_OnTapped"
                                           Text="{Binding Title}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </RelativeLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage>
    <NavigationPage Title="Map">
        <x:Arguments>
            <ContentPage>
                <StackLayout Padding="30" VerticalOptions="StartAndExpand">
                    <maps:Map x:Name="MyMap"
                              HeightRequest="600"
                              IsShowingUser="true"
                              WidthRequest="250" />
                </StackLayout>
            </ContentPage>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>