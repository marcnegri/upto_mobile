<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YouWeesh.Mobile.LoginForm">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center"/>
  <StackLayout>
    <Label Text="Image ici"></Label>
    <Image Source="model.jpg"  VerticalOptions="Center" HorizontalOptions="Center"/>
    <Entry Text="Login" TextColor="Blue" BackgroundColor="Gray" Focused="Entry_Focused" ></Entry>
    <Entry Text="Password" TextColor="Blue" IsPassword="true"  Placeholder="Password" ></Entry>
    <Button Text="Login" HorizontalOptions="Center" Clicked="btnLogin_Clicked"/>
    <Button Text="Login With Facebook"  />
    <Button Text="Login With Twitter" Clicked="BtnTwitter_Clicked" />
    <Button Text="Login With Google+" />

    <Label Text="Don't have an account yet ?" VerticalOptions="Center" HorizontalOptions="Center"/>
    
    <Button Text="Register" />
  </StackLayout>
</ContentPage>