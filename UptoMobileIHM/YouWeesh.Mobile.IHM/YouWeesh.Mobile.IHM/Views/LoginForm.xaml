<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="YouWeesh.Mobile.Views.LoginForm"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:Customcontrols="clr-namespace:YouWeesh.Mobile.CustomComponents;assembly=YouWeesh.Mobile" 
				BackgroundColor="#FC7102" >
	<StackLayout x:Name="stkContainer" BackgroundColor="#F2F2F2" Margin="10,150,10,100">
			<Customcontrols:RobotoLabel HorizontalOptions="CenterAndExpand" Text="LOG IN" TextColor="Black" FontAttributes="Bold"  FontSize="24" x:Name="lblLogin"></Customcontrols:RobotoLabel>
			 <Entry BackgroundColor="White"
                   Focused="Entry_Focused"
                   Placeholder="Email" PlaceholderColor="#C1C1C1"
					HorizontalOptions = "Center" WidthRequest="280"
                   TextColor="White"  Margin="5,10,5,0"/>
            <Entry BackgroundColor="White"
                   Focused="Entry_Focused"
                   IsPassword="true"
                   Placeholder="Password" PlaceholderColor="#C1C1C1"
					HorizontalOptions = "Center" WidthRequest="280"
                   TextColor="White" Margin="5,10,5,10" />
            <Button BackgroundColor="#FC7102"
                    Clicked="btnLogin_Clicked"
                    HorizontalOptions = "Center"
                    Text="Login" />
            <Customcontrols:RobotoLabel HorizontalOptions="Center"
                   Text="Forgot password?"
					FontAttributes="Bold"
                   VerticalOptions="Center" />
    </StackLayout>
</ContentPage>